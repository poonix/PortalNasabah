            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/tvNorek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="LB.0001"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            />

